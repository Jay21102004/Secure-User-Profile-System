# Environment Configuration Template
# Copy this file to .env and update the values

# Environment
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lenden

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=generate-a-very-secure-secret-key-here
JWT_EXPIRE=24h

# Encryption Configuration - CHANGE THIS IN PRODUCTION!
# Must be exactly 32 characters for AES-256
ENCRYPTION_SECRET=your-32-char-encryption-secret-key

# Client Configuration
CLIENT_URL=http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=12

# Development Settings
DEBUG=true